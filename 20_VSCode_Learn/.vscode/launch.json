{
    "version": "0.2.0",
    "configurations": [
        {
            // 调试名称
            "name": "MyDebug111",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/application",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "C/C++: g++ build active file",  // ✅ 添加这行
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}